resource <%= name %> {

  protocol  <%= protocol %>;
  device    <%= device %>;
  disk      <%= disk %>;
  meta-disk internal;
  syncer {
    verify-alg md5;
  }

  net {
    cram-hmac-alg sha1;
    shared-secret "<%= secret %>";
  }

  on <%= host1 %> {
    address <%= ip1 %>:<%= port %>;
  }

  on <%= host2 %> {
    address <%= ip2 %>:<%= port %>;
  }
}
